<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

       
    <h3><%= listing.title %></h3>

    </div>
    </div>
        <div class="card col-8 offset-3 show-card card-listing" >
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text"><br>
       
        <%= listing.description %><br>
        &#8377 <%= listing.price.toLocaleString("en-IN") %><br>
        <%= listing.location %><br>
        <%= listing.country %>

    
    
    </p>
  </div>
</div>
    
    
    <div class="btns mb-3">
<a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-5 edit-btn">Edit</a>
   
         <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-4">DELETE</button>
    </form>
    </div>

    <div class="col-8 offset-3 mb-3">
        <hr/>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id%>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating] " class="form-range">

                </div>
                <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea
                name="review[comment]" id="comment"  class="form-control" cols="30" rows="5" required></textarea>
            <div class="invalid-feedback">
                Please submit your feedback
            </div>
                
            </div>

            <button class="btn btn-outline-dark">Submit</button>
        </form>
<hr/>
<p><b>All Reviews</b></p>

<div class="row">
     <% for(let review of listing.reviews){%>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
                <div class="card-title">Shubham</div>
                <div class="card-text"><%= review.comment%></div>
                <div class="card-text"><%= review.rating%> stars</div>
                <form class="mb-3 mt-2" method="post" action="/listings/<%=listing._id%>/reviews/<%= review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark"> Delete</button>

                </form>
            </div>
        </div>
         <%}%>
</div>

    </div>
   
</body>
